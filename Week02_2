using UnityEngine;
using System.Collections;

public class Count : MonoBehaviour 

{

	
	// Use this for initialization
	void Start () 
	
	{
		string s = "'Possesses' possesses a great number of s's.";
		int count = 0;
		for (int i = 0; i < s.Length; i++)
			if (s[i] == 's') count++;

		print ("The letter 's' appears " + count + " times.");
	}
	
	// Update is called once per frame
	void Update () {
	
	}
}
